{
  "name": "mise",
  "version": "1.0.0",
  "description": "The version-controlled culinary standard for the Master Kitchen.",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "validate-recipes": "node ./scripts/validate-recipes.mjs",
    "qa": "node ./scripts/qa-test.mjs",
    "deploy": "npm run qa && npm run build && echo 'Ready to deploy - push /dist/ to production'",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.0",
    "astro": "^5.1.4",
    "cheerio": "^1.0.0",
    "gray-matter": "^4.0.3",
    "slugify": "^1.6.6",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "*.{js,mjs,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
