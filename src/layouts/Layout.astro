---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full bg-slate-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The Recipe Collection" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/print.css`} media="print" />
    <title>{title}</title>
  </head>
  <body class="h-full flex flex-col font-sans text-slate-900">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href={import.meta.env.BASE_URL} class="flex items-center gap-2 group">
            <div
              class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-lg group-hover:bg-indigo-700 transition-colors"
            >
              S
            </div>
            <span
              class="text-xl font-bold text-slate-900 tracking-tight group-hover:text-indigo-700 transition-colors"
              >Mise</span
            >
          </a>
        </div>

        <nav class="flex items-center gap-6">
          <a href={import.meta.env.BASE_URL} class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Recipes</a>
          <a href={`${import.meta.env.BASE_URL}meals`} class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Meals</a>
          <a href={`${import.meta.env.BASE_URL}calendar`} class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors">Calendar</a>
        </nav>
      </div>
    </header>

    <main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <footer class="bg-white border-t border-slate-200 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-slate-500">
            &copy; {new Date().getFullYear()} Culinary Codex. All rights reserved.
          </p>
          <div class="flex gap-4 text-sm text-slate-400">
            <span>Taste</span>
            <span>•</span>
            <span>Tradition</span>
            <span>•</span>
            <span>Together</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
