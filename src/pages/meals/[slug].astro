---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const meals = await getCollection('meals');
  return meals.map((meal) => ({
    params: { slug: meal.slug },
    props: { meal },
  }));
}

const { meal } = Astro.props;
const { Content } = await meal.render();

// Get recipe collection for linking
const recipes = await getCollection('recipes');
const recipeMap = new Map(recipes.map((r) => [r.slug, r]));

// Helper to get recipe title from slug
function getRecipeTitle(slug: string): string {
  const recipe = recipeMap.get(slug);
  return recipe?.data.title || slug;
}

// Collect all recipe slugs from meal
const recipeSlugFields = ['main', 'base', 'salad', 'sauce', 'dessert'];
const allRecipeSlugs: string[] = [];

recipeSlugFields.forEach((field) => {
  const value = meal.data[field];
  if (value) allRecipeSlugs.push(value);
});

if (meal.data.sides) {
  allRecipeSlugs.push(...meal.data.sides);
}
---

<Layout title={`${meal.data.title} | Meals | Mise`}>
  <div class="max-w-3xl mx-auto">
    <nav class="text-sm text-slate-500 mb-4">
      <a href={`${import.meta.env.BASE_URL}meals`} class="hover:text-indigo-600">‚Üê Back to Meals</a>
    </nav>

    <h1 class="text-3xl font-bold text-slate-900 mb-2">{meal.data.title}</h1>

    {
      meal.data.template && (
        <span class="inline-block bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-1 rounded mb-4">
          {meal.data.template}
        </span>
      )
    }

    {/* Time Info */}
    {
      (meal.data.totalTime || meal.data.activeTime) && (
        <div class="flex gap-4 text-sm text-slate-600 mb-6">
          {meal.data.activeTime && <span>Active: {meal.data.activeTime}</span>}
          {meal.data.totalTime && <span>Total: {meal.data.totalTime}</span>}
        </div>
      )
    }

    {/* Recipe Components */}
    <section class="bg-white rounded-lg border border-slate-200 p-6 mb-6">
      <h2 class="text-lg font-semibold text-slate-800 mb-4">Recipes in This Meal</h2>
      <div class="space-y-3">
        {
          meal.data.main && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-medium text-slate-400 w-16">Main</span>
              <a
                href={`${import.meta.env.BASE_URL}recipes/${meal.data.main}`}
                class="text-indigo-600 hover:underline"
              >
                {getRecipeTitle(meal.data.main)}
              </a>
            </div>
          )
        }
        {
          meal.data.sides &&
            meal.data.sides.map((side) => (
              <div class="flex items-center gap-2">
                <span class="text-xs font-medium text-slate-400 w-16">Side</span>
                <a
                  href={`${import.meta.env.BASE_URL}recipes/${side}`}
                  class="text-indigo-600 hover:underline"
                >
                  {getRecipeTitle(side)}
                </a>
              </div>
            ))
        }
        {
          meal.data.base && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-medium text-slate-400 w-16">Base</span>
              <a
                href={`${import.meta.env.BASE_URL}recipes/${meal.data.base}`}
                class="text-indigo-600 hover:underline"
              >
                {getRecipeTitle(meal.data.base)}
              </a>
            </div>
          )
        }
        {
          meal.data.salad && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-medium text-slate-400 w-16">Salad</span>
              <a
                href={`${import.meta.env.BASE_URL}recipes/${meal.data.salad}`}
                class="text-indigo-600 hover:underline"
              >
                {getRecipeTitle(meal.data.salad)}
              </a>
            </div>
          )
        }
        {
          meal.data.sauce && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-medium text-slate-400 w-16">Sauce</span>
              <a
                href={`${import.meta.env.BASE_URL}recipes/${meal.data.sauce}`}
                class="text-indigo-600 hover:underline"
              >
                {getRecipeTitle(meal.data.sauce)}
              </a>
            </div>
          )
        }
        {
          meal.data.dessert && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-medium text-slate-400 w-16">Dessert</span>
              <a
                href={`${import.meta.env.BASE_URL}recipes/${meal.data.dessert}`}
                class="text-indigo-600 hover:underline"
              >
                {getRecipeTitle(meal.data.dessert)}
              </a>
            </div>
          )
        }
      </div>
    </section>

    {/* Best For */}
    {
      meal.data.bestFor && meal.data.bestFor.length > 0 && (
        <section class="mb-6">
          <h2 class="text-sm font-medium text-slate-600 mb-2">Best For</h2>
          <div class="flex flex-wrap gap-2">
            {meal.data.bestFor.map((day) => (
              <span class="bg-slate-100 text-slate-700 text-sm px-3 py-1 rounded-full">{day}</span>
            ))}
          </div>
        </section>
      )
    }

    {/* Notes from markdown body */}
    <section class="prose prose-slate max-w-none">
      <Content />
    </section>
  </div>
</Layout>
